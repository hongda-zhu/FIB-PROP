<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            style="-fx-background-color: #e0e0e0">
    
    <top>
        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 15; -fx-background-color: #ff9800;">
            <Label fx:id="jugadorActual" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;"/>
        </HBox>
    </top>
    
    <!-- Panel de la izquierda con información integrada -->
    <left>
        <VBox spacing="20" alignment="CENTER" style="-fx-padding: 20; -fx-background-radius: 20; -fx-background-color: white;" minWidth="400" minHeight="800">
            <BorderPane.margin>
                <Insets left="50" top="50" bottom="15"/>
            </BorderPane.margin>
            
            <!-- Información de Puntuaciones -->
            <VBox maxHeight ="300" spacing="10" alignment="CENTER">
                <Label text="Puntuaciones" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #333;"/>
                <ScrollPane fx:id="puntuacionesScrollPane" 
                            fitToWidth="true" 
                            fitToHeight="false"
                            hbarPolicy="NEVER" 
                            vbarPolicy="AS_NEEDED"
                            style="-fx-background: transparent; -fx-background-color: transparent;"
                            maxHeight="250"
                            prefHeight="250">
                        <VBox fx:id="puntuacionesContainer" spacing="5" alignment="CENTER" 
                            style="-fx-padding: 5;"/>
                    </ScrollPane>                
            </VBox>
            
            <!-- Información de Fichas Restantes -->
            <VBox spacing="10" alignment="CENTER">
                <Label text="Fichas restantes" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #333;"/>
                <Label fx:id="lblFichasRestantes" text="Fichas en la bolsa: 0" style="-fx-font-size: 14px; -fx-text-fill: #333;"/>
            </VBox>

            <!-- Diccionario Seleccionado-->
           <VBox spacing="10" alignment="CENTER">
                <Label text="Diccionario Seleccionado" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #333;"/>
                <Label fx:id="lblDiccionarioSeleccionado" text="-" style="-fx-font-size: 14px; -fx-text-fill: #333;"/>
            </VBox>

            <Separator />
            
            <!-- Sección Acciones -->
            <VBox spacing="15" alignment="CENTER">
                <Label text="Acciones" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #333;"/>
                <Button fx:id="btnConfirmar" text="Confirmar" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 8 20; -fx-background-color: #ff9800; -fx-text-fill: white; -fx-border-radius: 5; -fx-background-radius: 5;" minWidth="200" minHeight="45" prefWidth="280" prefHeight="45"/>
                <Button fx:id="btnCancelar" text="Retirar fichas" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 8 20; -fx-background-color: #ff9800; -fx-text-fill: white; -fx-border-radius: 5; -fx-background-radius: 5;" minWidth="200" minHeight="45" prefWidth="280" prefHeight="45"/>
                <Button fx:id="btnPasarTurno" text="Pasar Turno" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 8 20; -fx-background-color: #ff9800; -fx-text-fill: white; -fx-border-radius: 5; -fx-background-radius: 5;" minWidth="200" minHeight="45" prefWidth="280" prefHeight="45" />
                <Button fx:id="btnCambiarFichas" text="Cambiar Fichas" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 8 20; -fx-background-color: #ff9800; -fx-text-fill: white; -fx-border-radius: 5; -fx-background-radius: 5;" minWidth="200" minHeight="45" prefWidth="280" prefHeight="45"/>
            </VBox>
            
            <!-- Espacio flexible para empujar el botón Pausar -->
            <Region VBox.vgrow="ALWAYS" minHeight="100" />
            
            <Button fx:id="btnPausarPartida" onAction="#pausarPartida" text="Pausar" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 8 20; -fx-background-color: #9e9e9e; -fx-text-fill: white; -fx-border-radius: 5; -fx-background-radius: 5;" minWidth="200" minHeight="45" prefWidth="280" prefHeight="45"/>
        </VBox>
    </left>

    <!-- Tablero con contenido centrado -->
    <center>
        <VBox spacing="20" alignment="CENTER">
            <BorderPane.margin>
                <Insets left="20" top="50" right="20" bottom="20"/>
            </BorderPane.margin>        
            
            <!-- Panel de tablero con fondo blanco  -->
            <StackPane fx:id="tableroContainer" style="-fx-background-radius: 20; -fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" VBox.vgrow="ALWAYS">
                <ScrollPane fx:id="scrollPane" fitToWidth="false" fitToHeight="false" pannable="true"
                            hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED"
                            style="-fx-background-color: white; -fx-background: transparent"> 
                    <BorderPane>
                        <!-- Columna para números de filas -->
                        <left>
                            <VBox fx:id="filasNumeracion" alignment="CENTER" style="-fx-padding: 5 10 5 5;"/>
                        </left>
                        
                        <!-- Fila para números de columnas -->
                        <top>
                            <HBox fx:id="columnasNumeracion" alignment="CENTER" style="-fx-padding: 5 5 10 5;"/>
                        </top>
                        
                        <center>
                            <GridPane fx:id="tablero" alignment="CENTER" style="-fx-padding: 5;"/>
                        </center>
                        
                    </BorderPane>
                </ScrollPane>
            </StackPane> 
            
            <!-- Fichas del jugador -->
            <HBox fx:id="fichasJugador" alignment="CENTER" spacing="5" 
                  style="-fx-padding: 15; -fx-background-color: #ff9800; -fx-background-radius: 20; -fx-min-height: 80; -fx-pref-height: 80; -fx-max-height: 80; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 4, 0, 0, 2);">
                <!-- Las fichas se añadirán dinámicamente -->
            </HBox>                 
        </VBox>        
    </center>
    
    <!-- Nuevo panel de historial a la derecha -->
    <right>
        <VBox spacing="20" alignment="CENTER" style="-fx-padding: 20; -fx-background-radius: 20; -fx-background-color: white;" minWidth="400" minHeight="800">
            <BorderPane.margin>
                <Insets right="50" top="50" bottom="15"/>
            </BorderPane.margin>
            
            <!-- Título del historial -->
            <Label text="Historial de turnos" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #333;"/>
            
            <!-- Historial de jugadas -->
            <VBox fx:id="historialContainer" spacing="10" alignment="CENTER_LEFT">
            </VBox>
            
            <!-- Espacio flexible -->
            <Region VBox.vgrow="ALWAYS" minHeight="100" />
        </VBox>
    </right>
    
    <bottom>
        <Region minHeight="40" prefHeight="40" style="-fx-background-color: transparent;"/>        
    </bottom>
</BorderPane>