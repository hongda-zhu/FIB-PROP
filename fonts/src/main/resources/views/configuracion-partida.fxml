<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            prefHeight="700" prefWidth="1000" style="-fx-background-color: #f5f5f5;">
    <top>
        <BorderPane style="-fx-background-color: #2c3e50;">
            <center>
                <Text fill="WHITE" text="Configuración" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="30.0" />
                    </font>
                    <BorderPane.margin>
                        <Insets bottom="30.0" top="30.0" />
                    </BorderPane.margin>                    
                </Text>
            </center>
        </BorderPane>
    </top>
    <left>
        <VBox fx:id="menuLateral" alignment="TOP_CENTER" style="-fx-background-color: white;" prefWidth="300" minWidth = "300">
            
            <Button fx:id="btnGeneral" text="General" 
                    prefWidth="300" prefHeight="100" 
                    style="-fx-font-size: 20px; -fx-text-fill: black;-fx-background-color: white;" 
                    onAction="#onGeneralClick"/>
            
            <Button fx:id="btnPartida" text="Partida" 
                    prefWidth="300" prefHeight="100" 
                    style="-fx-font-size: 20px; -fx-text-fill: white;-fx-background-color: rgb(0, 117, 196);" 
                    onAction="#onPartidaClick"/>
            
            <Button fx:id="btnAyuda" text="Ayuda" 
                    prefWidth="300" prefHeight="100" 
                    style="-fx-background-color: white; -fx-text-fill: black; -fx-font-size: 20px;" 
                    onAction="#onAyudaClick"/>
            
            
            
            <Button fx:id="btnVolver" text="Volver" 
                    prefWidth="300" prefHeight="100" 
                    style="-fx-font-size: 20px; -fx-text-fill: black; -fx-background-color: white;" 
                    onAction="#onVolverClick">                                 <VBox.margin>
                                    <Insets top="600" bottom = "10" />
                                </VBox.margin>  </Button>
        </VBox>
    </left>
    <center>
        <BorderPane>
            <center>
                <StackPane>
                    <BorderPane.margin>
                        <Insets top="20" right="20" bottom="20" left="20" />
                    </BorderPane.margin>
                    
                    <BorderPane>
                        <top>
                            <VBox spacing="10">
                                <Text text="Configuración Predeterminada Partida" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-fill: #2c3e50;">
                                    <VBox.margin>
                                        <Insets bottom="5" />
                                    </VBox.margin>
                                </Text>
                                <HBox prefHeight="2" style="-fx-background-color: #bdc3c7;" />
                            </VBox>
                        </top>
                        
                        <center>
                            <StackPane style="-fx-background-color: white; -fx-background-radius: 10;">
                                <BorderPane.margin>
                                    <Insets top="20" />
                                </BorderPane.margin>
                                <padding>
                                    <Insets top="30" right="30" bottom="30" left="30" />
                                </padding>
                                
                                <VBox spacing="25" alignment="TOP_LEFT">
                                    <!-- Tamaño del tablero -->
                                    <VBox spacing="10">
                                        <HBox spacing="10" alignment="CENTER_LEFT">
                                            <Label text="Tamaño del tablero:" style="-fx-font-size: 18px; -fx-text-fill: #34495e;"/>
                                            <Label fx:id="lblErrorTablero" style="-fx-font-size: 14px; -fx-text-fill: #e74c3c; -fx-font-style: italic;" 
                                                visible="false" text="Por favor, introduce un número válido entre 15 y 20"/>
                                        </HBox>
                                        <HBox spacing="15">
                                            <TextField fx:id="txtTamanioTablero" prefWidth="200" prefHeight="40" text="15"
                                                    style="-fx-background-color: #f5f5f5; -fx-border-radius: 8; -fx-font-size: 16px;"/>
                                            <Label text="(Valor entre 10 y 20)" style="-fx-font-size: 16px; -fx-font-style: italic;" />
                                        </HBox>
                                    </VBox>

                                    <!-- Dificultad -->
                                    <VBox spacing="10">
                                        <Label text="Diccionario:" style="-fx-font-size: 18px; -fx-text-fill: #34495e;"/>
                                        <HBox>
                                            <ComboBox fx:id="comboDiccionario" prefWidth="400" prefHeight="40"
                                                    style="-fx-background-color: #f5f5f5; -fx-border-radius: 8; -fx-font-size: 16px;"/>
                                        </HBox>
                                    </VBox>

                                    <HBox alignment="CENTER" spacing="20">
                                        <BorderPane.margin>
                                            <Insets top="20" />
                                        </BorderPane.margin>
                                        <Button fx:id="btnRestablecer" text="Restablecer" 
                                                prefWidth="150" prefHeight="40" 
                                                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" 
                                                onAction="#onRestablecerClick"/>
                                        <Button fx:id="btnGuardar" text="Guardar" 
                                                prefWidth="150" prefHeight="40" 
                                                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" 
                                                onAction="#onGuardarClick"/>
                                    </HBox>                                       
                                </VBox>
                             
                            </StackPane>
                        </center>
                    </BorderPane>
                </StackPane>
            </center>
        </BorderPane>
    </center>
</BorderPane>