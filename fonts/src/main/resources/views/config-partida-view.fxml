<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import java.lang.String?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx/11.0.1" 
            xmlns:fx="http://javafx.com/fxml/1" 
            style="-fx-background-color: #f5f5f5;">
    <top>
        <BorderPane style="-fx-background-color: #2c3e50;">
            <center>
                <HBox alignment = "CENTER"> 
                    <Text fill="WHITE" text="Gestión de Partidas - Configurar Nueva Partida" textAlignment="CENTER">
                        <font>
                            <Font name="System Bold" size="30.0" />
                        </font>

                    </Text>
                        <BorderPane.margin>
                            <Insets bottom="30.0" top="30.0" />
                        </BorderPane.margin>                    
                </HBox>
            </center>
        </BorderPane>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="40" style="-fx-padding: 50;">
            <!-- Contenedor principal con fondo blanco-->
            <VBox spacing="35" style="-fx-background-color: white; -fx-padding: 50; -fx-background-radius: 25;" maxWidth="900" prefWidth="900">
                
                <Label text="Configuración de Nueva Partida" 
                       style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                
                <!-- Diccionario -->
                <VBox spacing="10">
                    <Label text="Diccionario:" style="-fx-font-size: 18px; -fx-text-fill: #34495e;"/>
                    <HBox>
                        <ComboBox fx:id="cbDiccionario" prefWidth="400" prefHeight="40"
                                  style="-fx-background-color: #f5f5f5; -fx-border-radius: 8; -fx-font-size: 16px;"/>
                    </HBox>
                </VBox>
                
                <!-- Jugadores -->
                <VBox spacing="15">
                    <Label text="Jugadores:" style="-fx-font-size: 18px; -fx-text-fill: #34495e;"/>
                    <HBox spacing="30" alignment="CENTER">
                        <!-- Disponibles -->
                        <VBox spacing="12" prefWidth="280">
                            <Label text="Disponibles" style="-fx-font-size: 16px; -fx-text-fill: #7f8c8d;"/>
                            <ScrollPane prefHeight="200" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER"
                                      style="-fx-background-color: #f9f9f9; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-background-radius: 8;">
                                <content>
                                    <FlowPane fx:id="jugadoresDisponibles" hgap="12" vgap="12" alignment="CENTER"
                                             style="-fx-background-color: transparent;">
                                        <padding>
                                            <Insets top="15" bottom="15" left="15" right="15"/>
                                        </padding>
                                        <prefWrapLength>240</prefWrapLength>
                                    </FlowPane>
                                </content>
                            </ScrollPane>

                            <VBox spacing="15" alignment="CENTER">
                                <Button fx:id="btnAgregarJugador" text="Añadir +" prefWidth="120" prefHeight="50"
                                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 16px; -fx-font-weight: bold;"
                                        styleClass="btn-effect,btn-success"/>
                            </VBox>                            
                        </VBox>
                        
                        <!-- Seleccionados -->
                        <VBox spacing="12" prefWidth="280">
                            <Label text="Seleccionados" style="-fx-font-size: 16px; -fx-text-fill: #7f8c8d;"/>
                            <ScrollPane prefHeight="200" vbarPolicy="AS_NEEDED" hbarPolicy="NEVER"
                                      style="-fx-background-color: #f9f9f9; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-background-radius: 8;">
                                <content>
                                    <FlowPane fx:id="jugadoresSeleccionados" hgap="12" vgap="12" alignment="CENTER"
                                             style="-fx-background-color: transparent;">
                                        <padding>
                                            <Insets top="15" bottom="15" left="15" right="15"/>
                                        </padding>
                                        <prefWrapLength>240</prefWrapLength>
                                    </FlowPane>
                                </content>
                            </ScrollPane>
                            <VBox spacing="15" alignment="CENTER">                            
                                <Button fx:id="btnQuitarJugador" text="Eliminar -" prefWidth="120" prefHeight="50"
                                        style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 16px; -fx-font-weight: bold;"
                                        styleClass="btn-effect,btn-danger"/>  
                            </VBox>
                        </VBox>
                        
                    </HBox>
                </VBox>
                
                <!-- Tamaño del tablero -->
                <VBox spacing="10">
                    <Label text="Tamaño del Tablero:" style="-fx-font-size: 18px; -fx-text-fill: #34495e;"/>
                    <HBox spacing="10">
                        <TextField fx:id="txtTamanoTablero" prefWidth="150" prefHeight="40"
                                  style="-fx-background-color: #f5f5f5; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 16px; -fx-padding: 5 10;" 
                                  promptText="Ej: 15"/>
                        <Label text="(mínimo 15)" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d; -fx-padding: 10 0 0 0;"/>
                    </HBox>
                    <Label fx:id="lblErrorTablero" style="-fx-font-size: 14px; -fx-text-fill: #e74c3c; -fx-font-style: italic;" visible="false" 
                           text="Por favor, introduce un número válido entre 8 y 20"/>
                </VBox>
                
                <!-- Botones inferiores -->
                <HBox spacing="30" alignment="CENTER" style="-fx-padding: 20 0 0 0;">
                    <Button fx:id="btnVolver" text="Volver" prefWidth="160" prefHeight="55"
                            style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 18px; -fx-font-weight: bold;"
                            styleClass="btn-effect"/>
                    <Button fx:id="btnIniciarPartida" text="Iniciar Partida" prefWidth="160" prefHeight="55"
                            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-border-radius: 8; -fx-background-radius: 8; -fx-font-size: 18px; -fx-font-weight: bold;"
                            styleClass="btn-effect,btn-primary"/>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>